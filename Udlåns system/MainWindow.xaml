<Window x:Name="window" x:Class="Udlåns_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udlåns_system"
        mc:Ignorable="d"
        Title="MainWindow" Height="278" Width="616" ScrollViewer.VerticalScrollBarVisibility="Visible">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Udlån_btn" Content="Udlån Enhed" Cursor="Hand" Click="Udlån_Click"/>
        <Button Content="Vis Udlånte" Grid.Row="1" Click="Vis_Ud_Click"/>
        <Button Content="Vis Overskredet" Grid.Row="2" Click="Overskrevende_Click"/>
        <Button Content="Tilgængelige Computere" Grid.Row="3" Click="Tilgaengelige_Click"/>
        <Button Content="Alle Udlån" Grid.Row="4" Click="Alle_Udlaan_Click"/>
        <DataGrid Name="dataTable" Grid.Column="1" Grid.RowSpan="5"/>
    </Grid>
</Window>
